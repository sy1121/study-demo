    ns0:orientation="vertical">

    <LinearLayout
        ns0:id="@+id/paste_out_panel"
        ns0:layout_width="match_parent"
        ns0:layout_height="wrap_content"
        ns0:orientation="horizontal"
        ns0:layout_marginRight="20dp"
        ns0:layout_marginBottom="20dp"
        ns0:visibility="gone">

        <Button
            ns0:layout_width="0dp"
            ns0:layout_height="wrap_content"
            ns0:visibility="invisible"
            ns0:layout_weight="5"/>

        <RelativeLayout
            ns0:id="@+id/paste_panel"
            ns0:layout_width="0dp"
            ns0:layout_height="wrap_content"
            ns0:layout_weight="1"
            ns0:background="@drawable/menu_item_selector"
            ns0:focusable="true">

            <ImageView
                ns0:id="@+id/paste_icon"
                ns0:layout_width="wrap_content"
                ns0:layout_height="wrap_content"
                ns0:layout_centerVertical="true"
                ns0:layout_alignParentLeft="true"
                ns0:src="@mipmap/paste" />

            <TextView
                ns0:layout_width="wrap_content"
                ns0:layout_height="wrap_content"
                ns0:layout_alignParentRight="true"
                ns0:layout_centerVertical="true"
                ns0:text="粘贴"
                ns0:textColor="@color/colorWhite"
                ns0:textSize="40px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        ns0:layout_width="match_parent"
        ns0:layout_height="wrap_content"
        ns0:orientation="horizontal"
        ns0:layout_marginBottom="20dp"
        ns0:layout_marginRight="20dp">

