                ns0:layout_height="wrap_content"
                ns0:layout_centerVertical="true"
                ns0:layout_alignParentLeft="true"
                ns0:src="@mipmap/copy" />

            <TextView
                ns0:layout_width="wrap_content"
                ns0:layout_height="wrap_content"
                ns0:layout_gravity="right"
                ns0:layout_alignParentRight="true"
                ns0:layout_centerVertical="true"
                ns0:text="复制"
                ns0:textColor="@color/colorWhite"
                ns0:textSize="40px" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
