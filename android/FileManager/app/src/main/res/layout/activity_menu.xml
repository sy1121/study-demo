<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:ns0="http://schemas.android.com/apk/res/android"
    ns0:layout_width="match_parent"
    ns0:layout_height="match_parent"
    ns0:background="@mipmap/fm_right_menu_bg"
