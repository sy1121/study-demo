                ns0:layout_height="wrap_content"
                ns0:layout_alignParentRight="true"
                ns0:layout_centerVertical="true"
                ns0:text="删除"
                ns0:textColor="@color/colorWhite"
                ns0:textSize="40px" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        ns0:layout_width="match_parent"
        ns0:layout_height="wrap_content"
        ns0:orientation="horizontal"
        ns0:layout_marginBottom="20dp"
        ns0:layout_marginRight="20dp">

